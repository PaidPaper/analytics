name: Test Bug Label Workflow

on:
  pull_request:
    types:
      - opened
      - reopened
      - synchronize
      - labeled

jobs:
  bug-label-test:
    if: (github.event.action != 'labeled' && contains(github.event.pull_request.labels.*.name, 'bug')) || github.event.label.name == 'bug'
    runs-on: ubuntu-latest
    
    steps:
      - name: Label detected
        run: echo "Bug label was added to PR #${{ github.event.pull_request.number }}"
      
      - name: Wait 10 seconds
        run: sleep 10
      
      - name: Success
        run: exit 1
