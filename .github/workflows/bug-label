name: Test Bug Label Workflow

on:
  pull_request:
    types: [labeled, opened, synchronize]  # Add these to test

jobs:
  bug-label-test:
    runs-on: ubuntu-latest
    
    steps:
      - name: Label detected
        run: echo "Bug label was added to PR #${{ github.event.pull_request.number }}"
      
      - name: Wait 10 seconds
        run: sleep 10
      
      - name: Success
        run: exit 1
